<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog horizontalScrolling="false" draggable="true" contentWidth="500px" contentHeight="auto" showHeader="true"
		title="Select Persona to continue">
		<content>
			<List id="idPersonaListItem" items="{/results}" mode="SingleSelectLeft" width="100%">
				<items>
					<CustomListItem>
						<ObjectIdentifier title="{Stext}" text="{Mintx} / {Agetx}"/>
					</CustomListItem>
				</items>
			</List>
		</content>
		<buttons>
			<Button id="btnCancel" text="CANCEL" type="Default" press="onPressCancelPersonaBtn"></Button>
			<Button id="btnOk" text="CONTINUE" type="Emphasized" press="onPersonaSelection"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>