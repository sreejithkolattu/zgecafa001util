<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Dialog showHeader="false" verticalScrolling="false" horizontalScrolling="false" resizable="false">
		<l:VerticalLayout class="sapUiContentPadding verticalLayoutWidth">
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Title text="{/Title}" titleStyle="H2" level="H2" textAlign="Begin" class="successTitle"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Start" justifyContent="Start">
				<items>
					<Label text="{/SubTitle}" class="subTitleLabel sapUiNoContentPadding" textAlign="Center"/>
				</items>
			</FlexBox>
			<FlexBox alignItems="Start" justifyContent="Start" width="100%">
				<items>
					<VBox width="100%">
						<TextArea id="txtAreaNote" value="{/Remarks}" height="auto" rows="7" cols="90" width="100%"></TextArea>
					</VBox>
				</items>
			</FlexBox>
			<FlexBox alignItems="End" justifyContent="End">
				<items>
					<Button id="btnNo" text="{/BtnNoText}"></Button>
					<Button id="btnYes" text="{/BtnYesText}" class="sapUiTinyMarginBegin" type="Emphasized"></Button>
				</items>
			</FlexBox>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>