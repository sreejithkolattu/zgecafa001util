<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog showHeader="false" verticalScrolling="false" horizontalScrolling="false" resizable="false">
		<content>
			<l:VerticalLayout class="sapUiContentPadding verticalLayoutWidth">
				<l:HorizontalLayout class="dialogConfirmationText">
					<core:Icon src="sap-icon://message-warning" class="dialogConfirmationTitle dialogConfirmTitleFont sapUiTinyMarginTopBottom" color="#ffb700"/>
					<Title text="{/Title}" titleStyle="H2" level="H2" textAlign="Begin"
						class="dialogConfirmationTitle sapUiTinyMarginBegin sapUiTinyMarginTopBottom"/>
				</l:HorizontalLayout>
				<l:HorizontalLayout>
					<Label text="{/SubTitle}" class="subTitleLabel sapUiNoContentPadding"/>
				</l:HorizontalLayout>
			</l:VerticalLayout>
		</content>
		<buttons>
			<Button id="btnYes" text="{/BtnYesText}" type="Emphasized" class="dialogSingleBtn sapUiSmallMarginTopBottom"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
