<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog class="hrpDialog" showHeader="false" verticalScrolling="false" horizontalScrolling="false" resizable="false">
		<l:VerticalLayout class="sapUiContentPadding">
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<core:Icon src="sap-icon://message-error" class="iconSize2 sapUiMediumMarginTopBottom" color="red"/>
				</items>
			</FlexBox>
			<l:HorizontalLayout class="dialogConfirmationText dialogHead horiLayout">
				<Title text="Submission Error" titleStyle="H2" level="H2" class="successTitle" textAlign="Center"/>
			</l:HorizontalLayout>
			<l:HorizontalLayout class="dialogConfirmationText horiLayout">
				<Label text="Please check the box to accept the declaration before clicking on the submit button again."
					class="subTitleLabel sapUiNoContentPadding" textAlign="Center"/>
			</l:HorizontalLayout>
			<FlexBox alignItems="Center" justifyContent="Center">
				<items>
					<Button id="btnOk" text="OK" press="onCancel" width="100%" type="Emphasized" class="dialogSingleBtn sapUiSmallMarginTopBottom"></Button>
				</items>
			</FlexBox>
		</l:VerticalLayout>
	</Dialog>
</core:FragmentDefinition>